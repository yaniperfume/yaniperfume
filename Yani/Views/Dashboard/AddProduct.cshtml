@{
    Layout = "_Dashboard";
}
@section Scripts
    {
    <script src="@Url.Content("~/assets/js/pages/addproduct.js")"></script>
    }
@section Styles
    {
    <link rel="stylesheet" href="@Url.Content("~/assets/css/pages/addproduct.css")">
    }

<div class="row">
    <div class="col-12">
        <div class="box">
            <div class="box-header with-border">
                <h4 class="box-title">برند</h4>
            </div>
            <div class="box-body">
                <form action="@Url.Action("AddProduct")">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="fw-700 fs-16 form-label">نام</label>
                                    <input type="text" class="form-control" placeholder="نام برند" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="fw-700 fs-16 form-label">کلمات کلیدی</label>
                                    <input type="text" class="form-control" data-role="tagsinput">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="fw-700 fs-16 form-label">توضیحات محصول</label>
                                    <textarea class="form-control p-15" rows="4" placeholder="توضیحات برند اجباری نیست ولی برای SEO به کار میرود"></textarea>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                        <div class="row">
                            <!--/span-->
                            <div class="col-md-12">
                                <h4 class="box-title mt-20">اپلود تصویر</h4>
                                <div class="product-img text-start">
                                    <img src="@Url.Content("~/images/avatar.png")" alt="" id="displayImage">
                                    <input type="hidden" name="brandImage" id="ImageData" value="">
                                    <div class="input-group my-3">
                                        <button class="btn btn-primary" id="addImage">اپلود تصویر</button>
                                        <button id="removeImage" class="btn btn-danger">حذف</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions mt-10">
                        <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> ثبت</button>
                        <button class="btn btn-warning" onclick="location.href='@Url.Action("Products")'">لغو</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>