@model List<Yani.Models.Database.Brand>
@{
    Layout = "_Dashboard";
}
@section Scripts 
{
    <script src="@Url.Content("~/assets/vendor_components/pdfmaker/pdfmake.min.js")"></script>
    <script src="@Url.Content("~/assets/vendor_components/pdfmaker/vfs_fonts.js")"></script>
    <script src="@Url.Content("~/assets/vendor_components/datatable/datatables.min.js")"></script>
    <script src="@Url.Content("~/assets/js/pages/brands.js")"></script>
    }
@section Styles 
{
    <link rel="stylesheet" href="@Url.Content("~/assets/vendor_components/datatable/datatables.min.css")">
    }
<div class="col-12">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">برندها</h3>
            <button class="btn btn-success" onclick="location.href='@Url.Action("AddBrand")'">افزودن برند جدید</button>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="table-responsive">
                <table id="brands_table" class="table table-striped table-hover no-wrap product-order" data-page-size="10">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>تصویر</th>
                            <th>نام</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody> 
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</div>